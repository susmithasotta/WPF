<Window x:Class="tut13canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- place the elements in the specified cordinates x and z "-->
        <StackPanel>
            <Button>Button 1</Button>
            <Canvas Height="100" ClipToBounds="True">
                <Ellipse x:Name="Cirlce1" Fill="Black" Height="100" Width="100" Canvas.Top="25" Canvas.Left="25"></Ellipse>
                <Ellipse  x:Name="Cirlce2" Fill="Blue" Height="100" Width="100" ></Ellipse>
                <Ellipse  x:Name="Cirlce3" Fill="Red" Height="100" Width="100" Canvas.Left="50" Canvas.Top="0"></Ellipse>
            </Canvas>
            <Button>Button 2</Button>
        </StackPanel>
    </Grid>
</Window>
