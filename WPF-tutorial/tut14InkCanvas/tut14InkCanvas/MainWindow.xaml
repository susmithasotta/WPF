<Window x:Class="tut14InkCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="472" Width="525">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Height="337">
                <TextBlock HorizontalAlignment="Center">Editing Mode</TextBlock>
                <Button x:Name="btnselect" Margin="5" Click="btnselect_Click">Selection</Button>
                <Button x:Name="btndraw" Margin="5" Click="btndraw_click">Draw</Button>
                <Button x:Name="btnerase" Margin="5" Click="btnerase_click">Erase</Button>
                <TextBlock HorizontalAlignment="Center">Choose Color</TextBlock>
                <Rectangle MinHeight="50" Fill="Blue" Margin="5" x:Name="rectblue"></Rectangle>
                <Rectangle MinHeight="50" Fill="Red" Margin="5" x:Name="rectred"></Rectangle>
                <Rectangle MinHeight="50" Fill="Green" Margin="5" x:Name="rectgreen"></Rectangle>
                <Rectangle MinHeight="50" Fill="yellow" Margin="5" x:Name="rectyellow"></Rectangle>
            </StackPanel>
            <InkCanvas x:Name="inkcanvas1" EditingMode="Ink"></InkCanvas>
        </DockPanel>
        
    </Grid>
</Window>
