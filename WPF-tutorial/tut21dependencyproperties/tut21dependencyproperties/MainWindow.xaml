<Window x:Class="tut21dependencyproperties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:tut21dependencyproperties" 
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <local:MainWindow NumberValue="3.14"></local:MainWindow>
        <CheckBox x:Name="ChkForceInteger" Checked="ChkForceInteger_Checked"></CheckBox>
        <Button MaxHeight="100" MaxWidth="50" x:Name="btnGetNumberValue"></Button>
    </StackPanel>
    <!--to create user defined controls local:class name and to access namespace xmlns:local=our namespace-->
</Window>
