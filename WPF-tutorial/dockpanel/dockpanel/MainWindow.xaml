<Window x:Class="dockpanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- lastchildfill=true will  uses all the unused spaces in the doc panel-->
        <DockPanel LastChildFill="true">
            <StackPanel DockPanel.Dock="left" Background="red" Margin="4">
                <!--text block will occupy all unused space in doc panel if lastchildfill=true-->
                
                <TextBlock FontSize="10" Foreground="white">left docked</TextBlock>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Background="Blue" Margin="4">

                <TextBlock FontSize="10" Foreground="white">Right docked</TextBlock>
            </StackPanel>
            <StackPanel DockPanel.Dock="Top" Background="Yellow" Margin="4">

                <TextBlock FontSize="10" Foreground="white" >Top docked</TextBlock>
            </StackPanel>
            <StackPanel DockPanel.Dock="Bottom" Background="Green" Margin="2">
                <TextBlock FontSize="10" Foreground="white" >Bottom docked</TextBlock>
            </StackPanel>
            <TextBlock Background="Aqua" Margin="20" >testing</TextBlock>
        </DockPanel>
    </Grid>
</Window>
