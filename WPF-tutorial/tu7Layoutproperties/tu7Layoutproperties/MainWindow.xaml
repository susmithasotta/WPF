<Window x:Class="tu7Layoutproperties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <!-- horizontal and veritical alignment  and margins and padding demonstration-->
    <Grid>
        <StackPanel Background="yellow" HorizontalAlignment="center" VerticalAlignment="center">
            <TextBlock HorizontalAlignment="Center">Horizontal alignment property</TextBlock> <!--left,right,stretch-->
            <TextBlock  VerticalAlignment="Center" Margin="10" Background="Green">vertical alignment property</TextBlock> <!--botton,top,stretch -->
            <TextBlock  Margin="10"  Padding="10" Background="Green">Margin demo</TextBlock>
            <!--Margin and padding demo-->
            <!--effects spacing between elements itself and the container edges -->
            
        </StackPanel>
    </Grid>
</Window>
