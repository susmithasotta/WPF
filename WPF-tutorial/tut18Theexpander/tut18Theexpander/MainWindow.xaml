<Window x:Class="tut18Theexpander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel MaxWidth="300" HorizontalAlignment="Left">
            <!--To put border to expander we need to set 4 properties,backgroung,borderthickness,cornerradius, and borderbrush-->
            <Border Background="red" BorderThickness="10" BorderBrush="blue" CornerRadius="5">
            <Expander IsExpanded="True" Margin="5">
                <Expander.Header>
                    <TextBlock>Picture Tasks</TextBlock>
                </Expander.Header>
                <StackPanel>
                  <TextBlock Margin="5">View as a SlideShow</TextBlock>
                    <TextBlock Margin="5">Order prints online</TextBlock>
                    <TextBlock Margin="5">order pictures</TextBlock>
                    <TextBlock Margin="5">Copy all items to</TextBlock>
                </StackPanel>
            </Expander>
            </Border>
        </StackPanel>
    </DockPanel>
</Window>
<!--IsExpanded="True" beccause by deafult the items will be collapsed in expander-->